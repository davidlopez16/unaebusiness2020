        <%= form.label :titulo %>
        <%= form.text_field :titulo %>
      </div>

      <div class="field">
        <%= form.label :institucion %>
        <%= form.text_field :institucion %>
      </div>

      <div class="field">
        <%= form.label :situacion %>
        <%= form.select :situacion, options_for_select(['Completado', 'Cursando Actualmente', 'No Concluido']) %>
      </div>
      <div class="field">
        <%= form.label :año_de_graduación %>
        <%= form.number_field :anho_graduacion %>
      </div>

      <div class="actions">
        <%= form.submit "Agregar Estudios" %>
  </div>
<% end %>
