      <h2><%= pluralize(@estudio.errors.count, "error") %> prohibited this estudio from being saved:</h2>

      <ul>
      <% @estudio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
        <%= form.label :nivel %>
        <%= form.select :nivel, options_for_select(['Primaria', 'Secundaria', 'Universitaria', 'Posgrado']) %>
